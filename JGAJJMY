  <script>
    function checkAnswers() {
      const r1 = document.getElementById("riddle1").value.trim();
      const r2 = document.getElementById("riddle2").value.trim();
      const r3 = document.getElementById("riddle3").value.trim().toLowerCase();

      // <- Passe hier die richtigen Antworten an
      const correctR1 = "10";
      const correctR2 = "5";
      const correctR3 = "k√∂ln";

      if (r1 === correctR1 && r2 === correctR2 && r3 === correctR3) {
        document.getElementById("result").classList.remove("hidden");
      } else {
        alert("Noch nicht ganz richtig... versuch es nochmal!");
      }
    }
  </script>
